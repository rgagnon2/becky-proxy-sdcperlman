const request = require('request');

const availability = async (req, res) => {
  const { id } = req.query;
  const options = {
    'method': 'GET',
    'uri': `http://3.140.156.174:3001/api/availability/?id=${id}`,
  };
  request(options, (error, res2, body) => {
    if (error) {
      console.log(error);
      res.sendStatus(500);
      return error;
    }
    res.json(JSON.parse(body));
  });
};

